body
	overflow: hidden
	height: 100%
	width: 100%

#stats-dock
	position: relative
	height: 40px
	background-color: white

#stats
	background: -webkit-linear-gradient( #E6EAEE, white ) /* For Safari 5.1 to 6.0 */
	background: -o-linear-gradient( #E6EAEE, white ) /* For Opera 11.1 to 12.0 */
	background: -moz-linear-gradient( #E6EAEE, white ) /* For Firefox 3.6 to 15 */
	background: linear-gradient( #E6EAEE, white ) /* Standard syntax */

#stats-content
	text-align: center
	border-top: solid 1px #999
	width: auto
	padding: 5px
	font-size: 1.5em

#stats-headerbar
	width: 100%
	text-align: center
	border: solid 1px #999
	background-color: white

.stats-headerbar-cell
	width: 33.3333333%
	padding-top: 5px
	padding-bottom: 5px

#stats-headerbar-name-table
	margin-left: 5px
	margin-right: auto

#stats-headerbar-stats-table
	margin: 0 auto
#stats-headerbar-stats-table td
	padding-left: 25px
	padding-right: 25px

#stats-headerbar-tabs-table
	margin-left: auto
	margin-right: 0

.stats-headerbar-tab
	padding: 5px
	width: 60px
	background-color: #0B5FA5
	font-size: .75em
	cursor: pointer

#stats-headerbar-tabs-convos-text
	text-align: center
	color: white
	-webkit-touch-callout: none
	-webkit-user-select: none
	-khtml-user-select: none
	-moz-user-select: none
	-ms-user-select: none
	user-select: none

#stats-headerbar-tabs-badges-text
	text-align: center
	color: white
	font-weight: bold
	-webkit-touch-callout: none
	-webkit-user-select: none
	-khtml-user-select: none
	-moz-user-select: none
	-ms-user-select: none
	user-select: none

#stats-headerbar-tabs-info-text
	text-align: center
	color: white
	-webkit-touch-callout: none
	-webkit-user-select: none
	-khtml-user-select: none
	-moz-user-select: none
	-ms-user-select: none
	user-select: none

#stats-headerbar-tabs-mail-text
	text-align: center
	color: white
	-webkit-touch-callout: none
	-webkit-user-select: none
	-khtml-user-select: none
	-moz-user-select: none
	-ms-user-select: none
	user-select: none

#stats-headerbar-tabs-options-text
	text-align: center
	color: white
	-webkit-touch-callout: none
	-webkit-user-select: none
	-khtml-user-select: none
	-moz-user-select: none
	-ms-user-select: none
	user-select: none

#stats-viewer
	width: 100%
	height: 100%
	margin-top: 5px
	background-color: white
	border: 1px solid #999

#stats-headerbar-tabs-table
	display: table
	border-collapse: separate
	border-spacing: 5px 0px

.stats-headerbar-tab
	display: none

#stats-dock { visibility: hidden }
