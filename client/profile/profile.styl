body
	height: 100%
	width: 100%

#profile-dock
	position: relative
	height: 40px
	background-color: white

#profile
	background: -webkit-linear-gradient( #E6EAEE, white ) /* For Safari 5.1 to 6.0 */
	background: -o-linear-gradient( #E6EAEE, white ) /* For Opera 11.1 to 12.0 */
	background: -moz-linear-gradient( #E6EAEE, white ) /* For Firefox 3.6 to 15 */
	background: linear-gradient( #E6EAEE, white ) /* Standard syntax */

#profile-content
	text-align: center
	border-top: solid 1px #999
	width: auto
	padding: 5px
	font-size: 1.5em

#profile-headerbar
	width: 100%
	text-align: center
	border: solid 1px #999
	background-color: white

.profile-headerbar-cell
	width: 33.33333%
	padding: 5px

#profile-headerbar-name-table
	margin-left: 0
	margin-right: auto

#profile-headerbar-stats-table
	margin: 0 auto
#profile-headerbar-stats-table td
	padding-left: 25px
	padding-right: 25px

#profile-headerbar-tabs-table
	margin-left: auto
	margin-right: 0

.profile-headerbar-tab
	padding: 5px
	width: 60px
	background-color: #0B5FA5
	font-size: .75em
	cursor: pointer

.profile-headerbar-tab-space
	width: 5px

#profile-headerbar-tabs-delta-text
	text-align: center
	color: white
	-webkit-touch-callout: none
	-webkit-user-select: none
	-khtml-user-select: none
	-moz-user-select: none
	-ms-user-select: none
	user-select: none

#profile-headerbar-tabs-badge-text
	text-align: center
	color: white
	font-weight: bold
	-webkit-touch-callout: none
	-webkit-user-select: none
	-khtml-user-select: none
	-moz-user-select: none
	-ms-user-select: none
	user-select: none

#profile-headerbar-tabs-info-text
	text-align: center
	color: white
	-webkit-touch-callout: none
	-webkit-user-select: none
	-khtml-user-select: none
	-moz-user-select: none
	-ms-user-select: none
	user-select: none

#profile-headerbar-tabs-mail-text
	text-align: center
	color: white
	-webkit-touch-callout: none
	-webkit-user-select: none
	-khtml-user-select: none
	-moz-user-select: none
	-ms-user-select: none
	user-select: none

#profile-headerbar-tabs-options-text
	text-align: center
	color: white
	-webkit-touch-callout: none
	-webkit-user-select: none
	-khtml-user-select: none
	-moz-user-select: none
	-ms-user-select: none
	user-select: none

#profile-viewer
	width: 100%
	height: 100%
	margin-top: 5px
	background-color: white
	border: 1px solid #999

#profile-dock { visibility: hidden }
