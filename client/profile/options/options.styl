#options
	height: 100%
	width: 100%
	padding: 5px
	overflow: auto

#options-logout
	float: right
	width: 100px
	padding: 8px
	font-weight: bold
	font-size: 16pt
	margin-left: auto
	margin-right: 0

.options-faded
	background-color: #0B5FA5
	color: white
	cursor: pointer

.options-item
	margin-top: 10px
	margin-bottom: 10px
	
.option-error
	height: 30px

#options-pass
	font-size: 12pt
	padding: 10px
	text-align: left
	border-bottom: gray solid 1px

.options-input
	border: 1px solid gray
	width: 330px

.options-header
	margin-bottom: 5px
	font-size: 16pt
	font-weight: bold

.options-subhead
	font-weight: bold
	color: gray
	margin-top: 20px
	margin-bottom: 5px

.options-error
	position: fixed
	color: #FF4C00
	font-size: 10pt

#options-pass-submit
	margin-top: 10px
	padding: 8px
	width: 330px
	font-size: 12pt
	font-weight: bold
	text-align: center
	border: none
