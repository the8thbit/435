.badlog-subhead
	margin-top: 10px
	font-size: 11pt
	font-weight: bold
	color: gray
#badlog
	display: table
	margin: 0 auto
	margin-top: 10%
#badlog-left
	display: table-cell
	margin: 50px
#badlog-right
	display: table-cell
	padding-left: 50px
.badlog-submit-wrap
	text-align: right
.badlog-submit
	margin-top: 15px
	font-weight: bold
	padding: 2px
	padding-left: 8px
	padding-right: 8px
	font-size: 12pt
	background: #0B5FA5
	color: #FFFFFF
	border: none
	outline: none
	opacity: 0.6
	cursor: pointer
.badlog-submit:hover
	opacity:1.0
.badlog-input
	border-style: solid
	border-color: gray
	border-width: 1px
	padding-left: 2px
	margin-top: 2px
.badlog-header
	text-align: center
	font-weight: bold
	margin-bottom: 15px
.badlog-aux
	text-align: right
	color: #0B5FA5
	font-size: 10pt
	margin: 4px
	margin-top:  8px
#badlog-aux-remember	
	text-align: right
	margin: 0
#badlog-aux-recover
	text-align: right
	margin: 0
