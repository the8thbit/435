doctype html
html( lang='en' )
	head
		title= 'Chat Test'
		link( rel='stylesheet' type='text/css' href='/client/reset.css' )
		link( rel='stylesheet' type='text/css' href='/client/chat/chat.css' )
		script( src='//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js' )
		script( src='/client/chat/chat.js' )
		script( src='/socket.io/socket.io.js' )
	body
		table#chat-dock( style='width: 100%;' )
			tr( style='width: 100%; height: 100%;' )
				td( style='vertical-align: middle;' )
					img#logo( src='/assets/logo/logo.png' style='margin-left: 10px; margin-top: 5px; margin-bottom:5px;' )
				td( style='vertical-align: middle; color: #0B5FA5' )
					div#stats( style='text-align: right; font-size: 11pt; margin-right: 10px; font-weight: bold;' ) 
						| 0 ∆ &nbsp; 0 ☆ &nbsp; 0 ✉
					div#account( style='text-align: right; font-size: 12pt; margin-right: 10px; font-weight: bold;' )
						| username
		#chat-wrapper
			#chat-output-wrapper
				#chat-output  
			#chat-input-wrapper
				#chat-input
					input#chat-input-connect( class='chat-input-button' type='button' value='disconnect' )  
					#chat-input-field-wrapper
						#chat-input-field-container
							textarea#chat-input-field
					input#chat-input-send( class='chat-input-button' type='button' value='send' )
