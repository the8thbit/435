#splash-tags
	display: table
	visibility: hidden
	height: 100%
	width: 100%
	border-spacing: 5px

#splash-tags-input-wrapper
	display: table-cell
	width: 80%
	max-height: 100%
	border: 1px #999 solid

#splash-tags-input
	width: 100%
	padding: 6px
	vertical-align: middle
	overflow: none
	font-size: 15pt
	border: none

#splash-tags-start
	display: table-cell
	width: 20%
	height: 100%
	vertical-align: middle
	background: #0B5FA5
	color: white
	font-weight: bold
	font-size: 18pt
	cursor: pointer
	-webkit-user-select: none /* Chrome/Safari */        
	-moz-user-select: none /* Firefox */
	-ms-user-select: none /* IE10+ */
	-o-user-select: none
	user-select: none
