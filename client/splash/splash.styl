a
	text-decoration: none

body
	overflow: hidden
	height: 100%
	width: 100%

#splash-dock
	position: relative
	height: 40px
	background-color: white

#splash
	width: auto
	background: -webkit-linear-gradient( #E6EAEE, white ) /* For Safari 5.1 to 6.0 */
	background: -o-linear-gradient( #E6EAEE, white ) /* For Opera 11.1 to 12.0 */
	background: -moz-linear-gradient( #E6EAEE, white ) /* For Firefox 3.6 to 15 */
	background: linear-gradient( #E6EAEE, white ) /* Standard syntax */

#splash-content
	text-align: center
	border-top: solid 1px #999
	width: auto
	padding: 5px
	font-size: 1.5em

#splash-button-wrapper
	margin-top: 200px
	width: 290px
	width: auto

#splash-button
	vertical-align: middle
	padding-left: 10px
	padding-right: 10px
	padding-top: 2px
	padding-bottom: 2px
	margin: auto
	background: #0B5FA5
	color: white
	font-weight: bold
	font-size: 30pt

#splash-dock { visibility: hidden }
