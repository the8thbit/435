	body
		#scoreboard-dock
		#scoreboard
			#scoreboard-meta
				input#scoreboard-meta-view( type='hidden' value='#{ scoreboardData.view }' )
				input#scoreboard-meta-convo( type='hidden' value='#{ scoreboardData.convo }' )
			#scoreboard-content
				table#scoreboard-headerbar
					td#scoreboard-headerbar-name( class='scoreboard-headerbar-cell' ) 
					td#scoreboard-headerbar-tabs( class='scoreboard-headerbar-cell' )
						table#scoreboard-headerbar-tabs-table( class='scoreboard-headerbar-subtable' )
							tr#scoreboard-headerbar-tabs-row
								td#scoreboard-headerbar-tabs-convos( class='scoreboard-headerbar-tab' class='scoreboard-faded' )
									#scoreboard-headerbar-tabs-convos-text( class='scoreboard-headerbar-tab-text' ) ∆
								td#scoreboard-headerbar-tabs-badges( class='scoreboard-headerbar-tab' class='scoreboard-faded' )
									#scoreboard-headerbar-tabs-badges-text( class='scoreboard-headerbar-tab-text' ) ☆
				#scoreboard-viewer
				#scoreboard-input
